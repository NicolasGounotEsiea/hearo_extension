{
  "name": "HEARO",
  "description": "Description",
  "version": "0.1.0",
  "manifest_version": 3,

  "icons": {
      "16": "assets/icon-32.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-32.png",
      "128": "assets/icon-32.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },

	"action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-32.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-32.png",
      "128": "assets/icon-32.png"
    }
  },
	"permissions": ["nativeMessaging", "tabs", "scripting", "activeTab"],
  "content_security_policy": {"extension page": "script-src 'self' https://ajax.googleapis.com https://stackpath.bootstrapcdn.com; object-src 'self';"},
  "content_scripts": [
    {
      "matches": ["https://podcast.google.com/*"],
      "js": ["popup.js", "content-script.js", "sendTimeCode.js"]
    }
  ] 
}